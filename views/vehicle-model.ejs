<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <p>This is the vehicle model page</p>
    <form action="/vehicle/score">
        <select name="model">
            <option value="select make">select model and year</option>
            <% models.forEach(model => { %>
            <option value="<%=model.data.id%>"><%=model.data.attributes.name%> - <%=model.data.attributes.year%></option>
            <% }) %>
        </select><br>
        <input name=distance_value placeholder="amount"></input>
        <select name="unit">
            <option value="mi">mi</option>
            <option value="km">km</option>
        </select>
        <button>submit</button>
    </form>
</body>

</html>